                                  LDI                               0
                                  STW                               _f                          ; f = 0

                                  LDW                               _f
                                  JumpFalse                         _else_0x0237 0              ; if (f) then f

_else_0x0237                      LDI                               255
                                  STW                               _kk                         ; kk = 255

_repeat_0x023b                    WaitVBlank                                                    ; wait

                                  LD                                giga_serialRaw
                                  STW                               _k                          ; k = get("SERIAL_RAW")

                                  LDW                               _k
                                  XORI                              255
                                  BEQ                               _endif_0x0256               ; if k &&<> 255

                                  LDWI                              _handleInput
                                  CALL                              giga_vAC                    ; gosub handleInput

_endif_0x0256                     LDW                               _k
                                  STW                               _kk                         ; kk = k

                                  INC                               _f                          ; inc f

                                  LDWI                              _repeat_0x023b
                                  CALL                              giga_vAC                    ; forever

_handleInput                      PUSH                              
                                  LDW                               _k
                                  XORW                              _kk
                                  BEQ                               _endif_0x027e               ; if k &&<> kk

                                  LDI                               0
                                  STW                               _f                          ; f = 0

                                  LDW                               _k
                                  STW                               numericLabel
                                  LDI                               0
                                  STW                               defaultLabel
                                  GosubNumeric                                                  ; gosub k

_endif_0x027e                     LDW                               _f
                                  SUBI                              20
                                  BLE                               _endif_0x02b0               ; if f &&> 20

                                  LDW                               _f
                                  STW                               mathShift
                                  ShiftRight1bit                    
                                  ANDI                              1
                                  BEQ                               _endif_0x02b0               ; if &((f LSR 1) AND 1)

                                  LDW                               _k
                                  STW                               numericLabel
                                  LDI                               0
                                  STW                               defaultLabel
                                  GosubNumeric                                                  ; gosub k

_endif_0x02b0                     Return                                                        ; return

_127                              PUSH                              
                                  PrintString                       _str_0x7dfd
                                  NewLine                                                       ; print "A"

                                  Return                                                        ; return

